                            Margin="50,20,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="26"
                            Text="Welcome To StubbornBrowser" />
                        <Bookmarks1:BookmarksPanel
                            x:Name="bookmarks"
                            Width="676"
                            Margin="0,0,0,40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom" />
                    </Grid>

                </Grid>
